pipeline {
    agent any
    
    tools {
        maven 'M2_HOME'
    }
    stages {
    stage('Checkout'){
    steps {
      git 'https://github.com/smrakesh/DevOpsAddressBook.git'
      }
      }
    stage('package'){
    steps {
      sh 'mvn package'
      }
      }
     stage('Deployment'){
    steps {
      sh 'cp target/addressbook.war /opt/tomcat/webapps/'
      }
      }
      }
      }
